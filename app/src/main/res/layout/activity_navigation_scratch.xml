<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".week6.navigation.NavigationScratchActivity"
    tools:openDrawer="start"
    android:id="@+id/drawer_scr__layout"
    android:fitsSystemWindows="true">

    <include
        layout="@layout/app_bar_navigation_scr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_scr_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_scr_layout"
        app:menu="@menu/nav_scr_drawer"/>



</android.support.v4.widget.DrawerLayout>
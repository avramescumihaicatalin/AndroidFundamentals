<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <gradient
        android:angle="135"
        android:centerColor="#1976d2"
        android:centerX="0.1"
        android:centerY="0.1"
        android:endColor="#6200ea"
        android:gradientRadius="100"
        android:startColor="#00e5ff"
        android:type="linear" />

    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp"/>

    <corners
        android:radius="9dp"/>

    <stroke
        android:width="2dp"
        android:color="#f00"
        android:dashWidth="12dp"
        android:dashGap="20dp"/>
</shape>